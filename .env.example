# ========================================
# ACIP GPU Gateway - Environment Variables
# ========================================

# --- Gateway Server ---
GATEWAY_PORT=3000
GATEWAY_HOST=0.0.0.0
NODE_ENV=development

# --- FastAPI Backend ---
FASTAPI_URL=http://localhost:8000
FASTAPI_TIMEOUT=30000

# --- Redis ---
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0
REDIS_KEY_PREFIX=gateway:

# --- Authentication ---
AUTH_ENABLED=true
AUTH_TOKEN_SALT=distributed-gpu-inference-v1
AUTH_API_KEYS=             # Comma-separated list of valid API keys

# --- Rate Limiting ---
RATE_LIMIT_ENABLED=true
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# --- Cache ---
CACHE_ENABLED=true
CACHE_TTL_SECONDS=60
CACHE_MAX_SIZE=1000

# --- Router ---
ROUTER_STRATEGY=round-robin    # round-robin | least-connections | region-affinity
ROUTER_HEALTH_CHECK_INTERVAL=10000

# --- Metrics ---
METRICS_ENABLED=true
METRICS_PATH=/gateway/metrics

# --- OpenTelemetry ---
OTEL_ENABLED=false
OTEL_SERVICE_NAME=acip-gpu-gateway
OTEL_ZIPKIN_ENDPOINT=http://localhost:9411/api/v2/spans

# --- Logging ---
LOG_LEVEL=info                 # debug | info | warn | error

# --- CORS ---
CORS_ORIGIN=*
CORS_METHODS=GET,POST,PUT,DELETE,OPTIONS
